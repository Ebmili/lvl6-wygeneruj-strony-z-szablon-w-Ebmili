<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
</head>
<body>
  <h1>Edit User</h1>
  <form action="/update-user/<%= user.id %>" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= user.name %>"><br>
    <label for="surname">Surname:</label>
    <input type="text" id="surname" name="surname" value="<%= user.surname %>"><br>

    <h2>Schedules</h2>
    <ul>
      <% user.schedules.forEach((schedule, index) => { %>
        <li>
          <strong>Date:</strong> <input type="date" name="visitDate" value="<%= schedule.visitDate %>"><br>
          <strong>Time:</strong> <input type="time" name="visitTime" value="<%= schedule.visitTime %>"><br>
          <strong>Purpose:</strong> <input type="text" name="visitPurpose" value="<%= schedule.visitPurpose %>"><br>
        </li>
      <% }); %>
    </ul>

    <button type="submit">Save Changes</button>
  </form>
</body>
</html>

